{
	"parserOptions": {
		"ecmaVersion": 6
	},
	"env": {
		"node": true
	},
	"rules": {
		"array-bracket-spacing": [2, "never"],
		"block-scoped-var": 2,
		"brace-style": [2, "1tbs"],
		"camelcase": 1,
		"computed-property-spacing": [2, "never"],
		"curly": ["error", "multi-line"],
		"eqeqeq": 2,
		"max-depth": [1, 3],
		"max-len": [1, 80],
		"max-statements": [1, 15],
		"no-extend-native": 2,
		"no-mixed-spaces-and-tabs": 2,
		"no-redeclare": "error",
		"no-undef": "error",
		"no-unused-vars": 2,
		"no-use-before-define": [2, "nofunc"],
		"object-curly-spacing": ["warn", "never"],
		"quotes": [2, "single", "avoid-escape"],
		"semi": [1, "always"],
		"space-unary-ops": 2
	}
}
